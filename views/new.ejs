<% layout('./layouts/dash_boil.ejs') %>

<style>
  /* Form Container Styles */
  .create-course-container {
    max-width: 500px;
    margin: 0 auto;
    padding: 30px;
    background-color: #f4f7f6;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-bottom: 4rem;
  }

  /* Title Styles */
  .create-course-title {
    font-size: 24px;
    margin-bottom: 20px;
    color: #333;
    text-align: center;
  }

  /* Form Styles */
  .create-course-form {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Input Styles */
  .form-input {
    margin-bottom: 20px;
    width: 100%;
  }

  .form-label {
    font-weight: bold;
    color: #333;
    margin-bottom: 5px;
    display: block;
    text-align: left;
  }

  .form-input input[type="text"],
  .form-input input[type="number"] {
    width: calc(100% - 20px);
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 16px;
    box-sizing: border-box;
  }

  /* Error Message Styles */
  .error-message {
    color: #ff0000;
    font-size: 14px;
    margin-top: 5px;
  }

  /* Submit Button Styles */
  .form-submit-button {
    background-color: #6d0ea8;
    color: white;
    padding: 15px 30px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
    font-size: 16px;
  }

  .form-submit-button:hover {
    background-color: #8210c9;
  }
</style>

<!-- Form Container -->
<div class="create-course-container">
  <!-- Title -->
  <h1 class="create-course-title">Create Course</h1>

  <!-- Form -->
  <form
    class="create-course-form"
    method="post"
    action="/admin/Create"
    onsubmit="return validatePrice()"
  >
    <!-- Course Name Input -->
    <div class="form-input">
      <label class="form-label" for="courseName">Course Name:</label>
      <input
        type="text"
        id="courseName"
        placeholder="Name"
        name="courses[title]"
        required
      />
    </div>

    <div class="form-input">
      <label class="form-label" for="courseDisc">Course Description:</label>
      <input
        type="text"
        id="courseDisc"
        placeholder="Description"
        name="courses[description]"
      />
    </div>

    <!-- Course Price Input -->
    <div class="form-input">
      <label class="form-label" for="coursePrice">Course Price:</label>
      <input
        type="number"
        id="coursePrice"
        placeholder="Price"
        name="courses[price]"
        required
      />
    </div>

    <!-- Course Discounted Price Input -->
    <div class="form-input">
      <label class="form-label" for="courseDiscountedPrice"
        >Course Discount Price:</label
      >
      <input
        type="number"
        id="courseDiscountedPrice"
        placeholder="Discounted Price"
        name="courses[discounted_price]"
        required
      />
    </div>

    <!-- Course Image Input -->
    <div class="form-input">
      <label class="form-label" for="courseImage">Course Image:</label>
      <input
        type="text"
        id="courseImage"
        placeholder="Image"
        name="courses[image]"
        required
      />
    </div>

    <!-- Course Image Input -->
    <div class="form-input">
      <label class="form-label" for="courseLink">Course Link:</label>
      <input
        type="text"
        id="courseLink"
        placeholder="Link"
        name="courses[details]"
      />
    </div>

    <!-- Error Message -->
    <div id="errorMessage" class="error-message" style="display: none">
      The price cannot be less than the discounted price.
    </div>

    <!-- Submit Button -->
    <input class="form-submit-button" type="submit" value="Create New Course" />
  </form>
</div>

<script>
  function validatePrice() {
    var price = parseFloat(document.getElementById("coursePrice").value);
    var discountedPrice = parseFloat(
      document.getElementById("courseDiscountedPrice").value
    );

    if (price < discountedPrice) {
      document.getElementById("errorMessage").style.display = "block";
      return false; // Prevent form submission
    }

    return true;
  }
</script>
