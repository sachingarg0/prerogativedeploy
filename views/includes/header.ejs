<script>
  // Function to perform search
  function searchCourses() {
    var input = document
      .getElementById("searchInput")
      .value.trim()
      .toUpperCase();
    var cards = document.getElementsByClassName("course-card");
    var cardContainer = document.querySelector(".card-container");
    var searchResults = document.createElement("div");
    searchResults.classList.add("search-results");

    if (input !== "") {
      // Filter cards based on the input
      for (var i = 0; i < cards.length; i++) {
        var title = cards[i].querySelector("h4").innerText.toUpperCase();
        if (title.indexOf(input) > -1) {
          // Clone the card and add it to search results
          var clonedCard = cards[i].cloneNode(true);
          clonedCard.classList.add("search-result-card");
          searchResults.appendChild(clonedCard);
        } else {
          cards[i].style.display = "none"; // Hide cards that don't match the search
        }
      }
    } else {
      // If search input is empty, reload the page
      window.location.reload();
    }

    // Clear existing cards and display search results
    cardContainer.innerHTML = "";
    cardContainer.appendChild(searchResults);
  }

  // Add event listener to search input field
  document
    .getElementById("searchInput")
    .addEventListener("input", searchCourses);
</script>

